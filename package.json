{
  "name": "opendiscourse",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "logs": "wrangler tail",
    "logs:prod": "wrangler tail --env production",
    "logs:staging": "wrangler tail --env staging",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "setup": "npx tsx scripts/setup/init-cloudflare.ts",
    "migrate:dev": "wrangler d1 migrations apply opendiscourse-db --local",
    "migrate:prod": "wrangler d1 migrations apply opendiscourse-db --remote",
    "ingest:govinfo": "npx ts-node ingestion/scripts/ingestion.ts govinfo",
    "ingest:all": "npx ts-node ingestion/scripts/ingestion.ts all",
    "test:ingestion": "npx ts-node ingestion/scripts/test_ingestion.ts"
  },
  "dependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.8",
    "dotenv": "^16.4.5",
    "hono": "^4.1.3",
    "langchain": "^0.3.31",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250828.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "wrangler": "^4.33.1"
  }
}
