# ========================================
# OpenDiscourse Environment Configuration
# ========================================
# Copy this file to .env.local and update the values

# ====================
# Supabase Configuration
# ====================
# Required for authentication and database access
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ====================
# Database Configuration
# ====================
# Local development database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/opendiscourse

# ====================
# API Keys
# ====================
# Required for data ingestion from government sources
GOVINFO_API_KEY=your-govinfo-api-key

# Optional: Additional data sources
# CONGRESS_GOV_API_KEY=your-congress-gov-api-key
# PROPUBLICA_CONGRESS_API_KEY=your-propublica-congress-api-key

# ====================
# Cloudflare Configuration
# ====================
# Required for Cloudflare Workers deployment
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ====================
# AI/ML Services
# ====================
# Required for AI features
OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# COHERE_API_KEY=your-cohere-api-key

# ====================
# Ingestion Settings
# ====================
# Control how documents are processed
BATCH_SIZE=10           # Number of documents to process in parallel
MAX_PACKAGES=50         # Maximum number of packages to process in one run

# ====================
# Application Settings
# ====================
NODE_ENV=development    # development, test, or production
LOG_LEVEL=info          # error, warn, info, debug, trace
PORT=3000               # Local development server port

# ====================
# Security Settings
# ====================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret
JWT_SECRET=your-jwt-secret

# ====================
# CORS Configuration
# ====================
CORS_ORIGIN=http://localhost:3000

# ====================
# Feature Flags
# ====================
# Enable/disable specific features
ENABLE_AI_ANALYSIS=true
ENABLE_VECTOR_SEARCH=true
ENABLE_EMAIL_NOTIFICATIONS=false
